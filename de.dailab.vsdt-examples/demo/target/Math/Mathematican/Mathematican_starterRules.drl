package foo; // TODO package declaration

# Standard imports
import java.io.Serializable;
import de.dailab.jiactng.agentcore.action.Action;
import de.dailab.jiactng.agentcore.action.DoAction;
import de.dailab.jiactng.agentcore.comm.message.IJiacMessage;
import de.dailab.jiactng.ruleengine.timer.TimeFact;

# Domain imports

rule "ExtractRoot_Mathematican_start"
when
	action : Action( name == "ExtractRoot_Mathematican_start")
	jiacMessage : IJiacMessage()
	eval("mathematican_getsquarerootrequest".equals(jiacMessage.getHeader(IJiacMessage.Header.SEND_TO)))
	input : double() from jiacMessage.payload
then
	System.out.println("RULE ExtractRoot_Mathematican_start" fired);
	insert( new DoAction(action, null, new Serializable[] { input }) );
	retract( jiacMessage);
end

rule "Faculty_Mathematican_start"
when
	action : Action( name == "Faculty_Mathematican_start")
	jiacMessage : IJiacMessage()
	eval("mathematican_getfacultyrequest".equals(jiacMessage.getHeader(IJiacMessage.Header.SEND_TO)))
	param : int() from jiacMessage.payload
then
	System.out.println("RULE Faculty_Mathematican_start" fired);
	insert( new DoAction(action, null, new Serializable[] { param }) );
	retract( jiacMessage);
end

