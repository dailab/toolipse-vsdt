<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Generic application context definition. -->
<beans>

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/JMSMessaging.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="InterpreterPlatformWithDirectory" parent="Platform" abstract="true">
		<property name="agentNodeBeans">
			<list>
				<ref bean="StandardJMSBroker"/>
				<ref bean="InterpreterDirectoryAgentNodeBean"/>
			</list>
		</property>
	</bean>

	<bean name="InterpreterDirectoryAgentNodeBean" class="de.dailab.jiactng.agentcore.comm.wp.DirectoryAgentNodeBean" singleton="false"> 
		<property name="messageTransport">
			<ref bean="StandardJMSMessageTransport" />
		</property>
		<property name="nodeGroup" value="ischwerdbekoppt" />
	</bean>


	<!-- Node holding some Interpreter Agents -->
	<bean name="InterpreterNode" parent="InterpreterPlatformWithDirectory">
		<property name="agentNodeBeans">
			<list>
				<ref bean="StandardJMSBroker" />
				<ref bean="InterpreterDirectoryAgentNodeBean"/>
			</list>
		</property>
		<property name="agents">
			<list>
				<ref bean="InterpreterAgentA" />
				<ref bean="InterpreterAgentB" />
			</list>
		</property>
	</bean>

	<bean name="InterpreterAgentA" parent="InterpreterAgent" singleton="false" />
	
	<bean name="InterpreterAgentB" parent="InterpreterAgent" singleton="false" />

	<!-- Interpreter Agent -->
	<bean name="InterpreterAgent" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="JadlInterpreterAgentBean" />
				<ref bean="ServiceDeployAgentBean" />
				<ref bean="DirectoryAccessBean" />
				<ref bean="CommunicationBean" />
			</list>
		</property>
		<property name="beanExecutionTimeout" value="3000000" />
	</bean>

	<!-- Interpreter Bean -->
	<bean name="JadlInterpreterAgentBean" class="de.dailab.jiactng.jadl.JadlInterpreterAgentBean" singleton="false">
		<property name="logLevel" value="INFO"/>
	</bean>

	<!-- Service Deployment -->
	<bean name="ServiceDeployAgentBean" class="de.dailab.jiactng.jadl.ServiceDeployAgentBean" singleton="false"/>

</beans>

